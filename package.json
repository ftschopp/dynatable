{
  "name": "dynatable",
  "version": "0.0.0-development",
  "repository": "https://github.com/ftschopp/dynatable",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules",
    "debug": "turbo run dev --filter=crud  ",
    "release": "multi-semantic-release --deps.release='inherit' --deps.prefix='^' --ignore-packages='apps/**,packages/eslint-config/**,packages/typescript-config/**'"
  },
  "devDependencies": {
    "@qiwi/multi-semantic-release": "^7.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^30.0.0",
    "prettier": "^3.7.4",
    "semantic-release": "^21.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
